@model List<ResultCommentDto>

<!-- Yapay Zekanın Sunduğu -->

<div class="container mt-3">
	<h4 class="mb-4">Yorumlar</h4>

	<div class="row">
		<!-- Yorum Listeleme Alanı -->
		<div class="col-md-2">
			<h5>@Model.Count() Yorum Bulunmaktadır.</h5>
			<br />
			@foreach (var item in Model)
			{
				<div class="d-flex mb-4">
					<img src="@item.ImageUrl" alt="User" class="rounded-circle me-3" style="width: 50px; height: 50px;">
					<div>
						<p> <strong> Gönderen: </strong> <i> @item.NameSurname </i> <small> <strong> Gönderim Tarihi: </strong> @item.CreatedDate.ToString("dd.MM.yyyy") </small> </p>
						<p class="mt-1"> <strong> İçerik: </strong> @item.CommentDetail</p>
					</div>
				</div>
			}
			@await Html.PartialAsync("~/Views/ProductList/AddComment.cshtml")
		</div>
	</div>
</div>


