@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProductListWithCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="chart-box">
				<h4>Yeni Ürün Güncelleme Sayfası</h4>
				<br />
				<div class="bs-example" data-example-id="bordered-table">

					<form method="post" asp-action="UpdateProduct" asp-controller="Product" asp-area="Admin">
						<input type="hidden" asp-for="ProductID" />
						<label>Ürün Adı</label>
						<input type="text" class="form-control" asp-for="ProductName" />
						<br />
						<label>Ürün Fiyatı</label>
						<input type="text" class="form-control" asp-for="ProductPrice" />
						<br />
						<label>Ürün Açıklaması</label>
						<textarea class="form-control" asp-for="ProductDescription" rows="3"></textarea>
						<br />
						<label>Ürün Görseli</label>
						<input type="text" class="form-control" asp-for="ProductImageUrl" />
						<br />
						<label>Ürün Kategorisi</label>
						@Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.CategoryValues, new { @class = "form-control" })

						<br />
						<button class="btn btn-primary">Ürün Güncelle</button>
					</form>

				</div>
			</div>
		</div>
	</div>
</section>

