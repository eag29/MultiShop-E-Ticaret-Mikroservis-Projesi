@model List<ResultProductDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<section class="content container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="chart-box">
				<h4>Ürün Listesi</h4>
				<p>Ürün ile ilgili işlemlerinizi aşağıdan gerçekleştirebilirsiniz. </p>
				<br />
				<div class="bs-example" data-example-id="bordered-table">
					<table class="table table-bordered">
						<thead>
							<tr>
								<th>#</th>
								<th>Ürün Adı</th>
								<th>Ürün Açıklaması</th>
								<th>Ürün Fiyatı</th>
								<th>Ürün Ana Görseli</th>
								<th>Ürün Alt Açıklaması</th>
								<th>Ürün İlan Görseli 1</th>
								<th>Ürün İlan Görseli 2</th>
								<th>Ürün İlan Görseli 3</th>
								<th>Ürün İlan Görseli 4</th>
								<th>Ürün Bilgisi</th>
								<th>Sil</th>
								<th>Güncelle</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<th scope="row">@count</th>
									<td>@item.ProductName</td>
									<td>@item.ProductDescription</td>
									<td>@item.ProductPrice</td>
									<td> <img src="@item.ProductImageUrl" style="width:75px; height:75px;" /> </td>
									<td>@item.ProductSubDescription</td>
									<td> <img src="@item.Image1" style="width:60px; height:60px;" /> </td>
									<td> <img src="@item.Image2" style="width:60px; height:60px;" /> </td>
									<td> <img src="@item.Image3" style="width:60px; height:60px;" /> </td>
									<td> <img src="@item.Image4" style="width:60px; height:60px;" /> </td>
									<td>@item.ProductInfo</td>
									<td> <a href="/Admin/Product/DeleteProduct/@item.ProductID" class="btn btn-danger"> Sil</a> </td>
									<td> <a href="/Admin/Product/UpdateProduct/@item.ProductID" class="btn btn-succes"> Güncelle</a> </td>
								</tr>
							}
						</tbody>
					</table>
					<br />
					<a href="/Admin/Product/CreateProduct" class="btn btn-primary"> Yeni Ürün Girişi</a>
				</div>
			</div>
		</div>
	</div>
</section>

