@model UpdateCargoCompanyDto
@{
	ViewData["Title"] = "UpdateCargoCompany";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="chart-box">
				<h4> Kargo Şirketi Güncelleme Sayfası</h4>
				<br />
				<div class="bs-example" data-example-id="bordered-table">

					<form method="post">
						<label>Kargo Şirketi Adı</label>
						<input type="hidden" asp-for="cargoCompanyID" />
						<input type="text" class="form-control" asp-for="cargoCompanyName" />
						<br />
						<button class="btn btn-primary">Kargo Şirketini Güncelle</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>

