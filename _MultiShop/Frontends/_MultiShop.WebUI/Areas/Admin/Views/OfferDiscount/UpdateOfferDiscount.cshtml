@model GetByIdOfferDiscountDto
@{
    ViewData["Title"] = "UpdateOfferDiscount";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<section class="content container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="chart-box">
				<h4>İndirim Teklifi Güncelleme Sayfası</h4>
				<br />
				<div class="bs-example" data-example-id="bordered-table">

					<form method="post">
						<input type="hidden" asp-for="OfferDiscountID" />
						<label>İndirim Teklifi Başlığı</label>
						<input type="text" class="form-control" asp-for="Title" />
						<br />
						<label>İndirim Teklifi Başlığı</label>
						<input type="text" class="form-control" asp-for="SubTitle" />
						<br />
						<label>Button Başlığı</label>
						<input type="text" class="form-control" asp-for="ButtonTitle" />
						<br />
						<label>İndirim Teklifi Görseli</label>
						<input type="text" class="form-control" asp-for="ImageUrl" />
						<br />
						<label>İndirimli Ürün</label>
						<select class="form-control" style="min-height:50px !important;" asp-for="ProductID" asp-items="ViewBag.ProductValues"></select>
						<br />
						<button class="btn btn-primary">İndirim Teklifi Güncelle</button>
					</form>

				</div>
			</div>
		</div>
	</div>
</section>