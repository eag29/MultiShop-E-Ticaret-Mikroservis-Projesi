@model List<ResultISendboxMessageDto>
@{
    ViewData["Title"] = "Sendbox";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
	int count = 0;
}

<div class="main-panel">
	<div class="content-wrapper">
		<div class="row">
			<div class="col-lg-12 grid-margin stretch-card">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Giden Mesaj Listesi</h4>
						<div class="table-responsive pt-3">
							<table class="table table-bordered">
								<thead>
									<tr>
										<th>#</th>
										<th>Alıcı</th>
										<th>Konu</th>
										<th>Tarih</th>
										<th>Durum</th>
										<th>Mesajı Aç</th>
										<th>Sil</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<th>@count</th>
											<td>@item.SendedId</td>
											<td>@item.Subject</td>
											<td>@(((DateTime)item.MessageDate).ToString("ddd-MMM-yyy"))</td>
											<td>@item.IsRead</td>
											<td> <a href="#" class="btn btn-danger"> Mesajı Aç </a> </td>
											<td> <a href="#" class="btn btn-info"> Sil </a> </td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


